{
  "name": "web3authn-passkey-monorepo",
  "private": true,
  "scripts": {
    "install-all": "pnpm -r install",
    "build:sdk": "pnpm -C sdk build",
    "build:site": "pnpm -C examples/vite build && pnpm docs:build",
    "frontend": "pnpm -C examples/vite dev",
    "frontend:iphone": "pnpm -C examples/vite dev:iphone",
    "frontend:docs": "concurrently --kill-others --names app,docs \"pnpm -C examples/tatchi-docs dev\" \"pnpm docs:dev\"",
    "server": "EXPECTED_ORIGIN=https://example.localhost EXPECTED_WALLET_ORIGIN=https://wallet.example.localhost pnpm -C examples/relay-server dev",
    "server:iphone": "EXPECTED_ORIGIN=https://pta-m4.local EXPECTED_WALLET_ORIGIN=https://pta-m4.local:8443 pnpm -C examples/relay-server dev",
    "gen:shamir": "pnpm -C examples/relay-server run gen:shamir",
    "docs:dev": "cd examples/tatchi-docs/src && vitepress dev --port 5222",
    "docs:build": "cd examples/tatchi-docs/src && vitepress build --outDir ../dist/docs",
    "docs:preview": "cd examples/tatchi-docs/src && vitepress preview --port 5222",
    "test": "pnpm -C sdk test",
    "test:inline": "pnpm -C sdk test:inline",
    "test:e2e": "pnpm -C sdk test:e2e",
    "test:unit": "pnpm -C sdk test:unit",
    "test:wallet-iframe": "pnpm -C sdk test:wallet-iframe",
    "test:lit-components": "pnpm -C sdk test:lit-components",
    "show-report": "pnpm -C sdk exec playwright show-report"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "vitepress": "^1.5.0"
  }
}
